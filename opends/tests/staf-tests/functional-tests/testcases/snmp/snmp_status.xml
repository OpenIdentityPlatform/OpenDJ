                'snmpPort'      : SNMP_PORT ,
                'snmpCommunity' : community ,
                'snmpOIDs'      : oid ,
                'snmpStatus'    : 'noError'
                }
              </call>

              <call function="'testCase_Postamble'"/>

            </sequence>

