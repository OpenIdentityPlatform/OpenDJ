        cmdRC=RC
        cmdResult=STAFResult
      </script>

      <call function="'checkRC'">
          { 'returncode' : cmdRC ,
            'result'     : cmdResult }
      </call>

      <return>cmdRC</return>
    </sequence>

  </function>	

