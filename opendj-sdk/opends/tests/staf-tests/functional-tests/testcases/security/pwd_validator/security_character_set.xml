            </call>

            <call function="'testCase_Postamble'"/>
            
          </sequence>
        </testcase>
        
        <!--- Test Case information
          #@TestMarker       Character Set
          #@TestName         Character Set : Pwd with a valid string
          #@TestIssue        none
          #@TestPurpose      Pwd with a valid string
          #@TestPreamble     none
